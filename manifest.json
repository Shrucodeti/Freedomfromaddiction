{
  "name": "Turn-off",
  "description": "The extension will control your addiction with Quora",
  "manifest_version": 2,
  "version": "0.1",
  "browser_action": {
      "default_icon": "stopit.jpg",
      "default_popup": "popup.html"
  },
  "icons": {
    "64": "stopit.jpg"
  },
  "content_scripts": [ 
    
    {   "run_at": "document_end",
        "matches": ["*://www.quora.com/*"],
        "js": ["Quora.js"]
    }
  ],
  "permissions": [
     "tabs",
     "activeTab",
     "alarms",
     "contentSettings",
     "*://www.quora.com/*"
  ]
  
}
